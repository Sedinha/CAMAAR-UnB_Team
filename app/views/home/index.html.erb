<div class="login-container">
  <h1>LOGIN</h1>
  
  <div class="login-form">
    <%= form_with(url: login_path, method: :post, local: true, class: "login-form") do |f| %>
    <div class="form-group">
      <%= f.label :matricula, "MatrÃ­cula" %>
      <%= f.text_field :matricula, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    
    <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>

    <% if flash.now[:alert] %>
      <p class="text-center" style="color: red;"><%= flash.now[:alert] %></p>
    <% end %>
    
    <%= link_to "Criar nova conta", signup_path, class: "signup-link" %>
  </div>
</div>