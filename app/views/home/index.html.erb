<div class="login-container">
  <h1>LOGIN</h1>
  
  <div class="login-form">
    <div class="form-group">
      <input type="email" placeholder="Email" class="form-input">
    </div>
    
    <div class="form-group">
      <input type="password" placeholder="Senha" class="form-input">
    </div>
    
    <div class="button-group">
      <%= button_to "Logar como admin", login_admin_path, method: :post, class: "login-button" %>
      <%= button_to "Logar como usuario", login_user_path, method: :post, class: "login-button" %>
    </div>
  </div>
</div>